{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 3
  },
  "include": [
    "cmake/presets/Base.json"
  ],
  "workflowPresets": [
    {
      "name": "wf-release",
      "steps": [
        { "type": "configure", "name": "release" },
        { "type": "build", "name": "build-release" },
        { "type": "test", "name": "test-release" }
      ]
    },
    {
      "name": "wf-debug",
      "steps": [
        { "type": "configure", "name": "debug" },
        { "type": "build", "name": "build-debug" },
        { "type": "test", "name": "test-debug" }
      ]
    }
  ]
}