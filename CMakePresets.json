{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26,
    "patch": 0
  },
  "include": [],
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER_LAUNCHER": "",
        "CMAKE_CXX_COMPILER_NAMES": "clang++ g++",
        "CMAKE_C_COMPILER_NAMES": "clang gcc",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_C_STANDARD": "23",
      "CMAKE_C_STANDARD_REQUIRED": "ON",
      "CMAKE_C_EXTENSIONS": "OFF"
      }
    },
    {
      "name": "conf-debug",
      "inherits": "default",
      "displayName": "Debug",
      "description": "Build Debug configuration",
      "binaryDir": "${sourceDir}/build/debug",
      "installDir": "${sourceDir}/build/debug/install",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "conf-release",
      "inherits": "default",
      "displayName": "Release",
      "description": "Build Release configuration",
      "binaryDir": "${sourceDir}/build/release/x64",
      "installDir": "${sourceDir}/build/release/x64/install",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "configurePreset": "conf-debug",
      "displayName": "Build Debug",
      "description": "Compila en modo Debug"
    },
    {
      "name": "build-release",
      "configurePreset": "conf-release",
      "displayName": "Build Release",
      "description": "Compila en modo Release"
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "steps": [
        { "type": "configure", "name": "conf-debug" },
        { "type": "build", "name": "build-debug" }
      ]
    },
    {
      "name": "release",
      "steps": [
        { "type": "configure", "name": "conf-release" },
        { "type": "build", "name": "build-release" }
      ]
    }
  ],
  "vendor": {
    "data": "IDE-specific information"
  }
}