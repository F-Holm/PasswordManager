{
    "version": 4,
    "configurePresets": [
        {
            "name": "mingw-linux",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "NEVER",
                "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "ONLY",
                "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY"
            }
        },
        {
            "name": "mingw-x64-linux",
            "hidden": true,
            "inherits": [
                "mingw-linux"
            ],
            "cacheVariables": {
                "CMAKE_C_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_CXX_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_FIND_ROOT_PATH": "/usr/x86_64-w64-mingw32ucrt"
            }
        },
        {
            "name": "mingw-x86-linux",
            "hidden": true,
            "inherits": [
                "mingw-linux"
            ],
            "cacheVariables": {
                "CMAKE_C_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_CXX_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_FIND_ROOT_PATH": "/usr/i686-w64-mingw32"
            }
        },
        {
            "name": "mingw-arm64-linux",
            "hidden": true,
            "inherits": [
                "mingw-linux"
            ],
            "cacheVariables": {
                "CMAKE_C_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_CXX_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_FIND_ROOT_PATH": "/usr/x86_64-w64-mingw32ucrt"
            }
        },
        {
            "name": "mingw-arm-linux",
            "hidden": true,
            "inherits": [
                "mingw-linux"
            ],
            "cacheVariables": {
                "CMAKE_C_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_CXX_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_FIND_ROOT_PATH": "/usr/i686-w64-mingw32"
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "clang-linux-x64",
            "hidden": true,
            "inherits": "clang",
            "cacheVariables": {
                "CMAKE_SYSTEM_PROCESSOR": "x86_64",
            }
        },
        {
            "name": "clang-linux-x86",
            "hidden": true,
            "inherits": "clang",
            "cacheVariables": {
                "CMAKE_SYSTEM_PROCESSOR": "x86",
                "CMAKE_C_FLAGS": "-m32",
                "CMAKE_CXX_FLAGS": "-m32",
                "CMAKE_EXE_LINKER_FLAGS": "-m32"
            }
        },
        {
            "name": "clang-linux-arm64",
            "hidden": true,
            "inherits": "clang",
            "cacheVariables": {
                "CMAKE_SYSTEM_PROCESSOR": "aarch64",
                "CMAKE_C_FLAGS": "--target=aarch64-linux-gnu",
                "CMAKE_CXX_FLAGS": "--target=aarch64-linux-gnu",
                "CMAKE_EXE_LINKER_FLAGS": "--target=aarch64-linux-gnu"
            }
        },
        {
            "name": "clang-linux-arm",
            "hidden": true,
            "inherits": "clang",
            "cacheVariables": {
                "CMAKE_SYSTEM_PROCESSOR": "arm",
                "CMAKE_C_FLAGS": "--target=arm-linux-gnueabihf",
                "CMAKE_CXX_FLAGS": "--target=arm-linux-gnueabihf",
                "CMAKE_EXE_LINKER_FLAGS": "--target=arm-linux-gnueabihf"
            }
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        }
    ]
}