{
    "version": 4,
    "configurePresets": [
        {
            "name": "mingw-linux",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "NEVER",
                "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "ONLY",
                "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY"
            }
        },
        {
            "name": "mingw-arm64-linux",
            "hidden": true,
            "inherits": "mingw-linux",
            "cacheVariables": {
                "CMAKE_C_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_CXX_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_FIND_ROOT_PATH": "/usr/x86_64-w64-mingw32"
            }
        },
        {
            "name": "mingw-x86_64-linux",
            "hidden": true,
            "inherits": "mingw-linux",
            "cacheVariables": {
                "CMAKE_C_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_CXX_FLAGS": "--target=aarch64-w64-mingw32",
                "CMAKE_FIND_ROOT_PATH": "/usr/x86_64-w64-mingw32"
            }
        },
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "target-linux",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Linux"
            }
        },
        {
            "name": "target-linux-x86_64",
            "hidden": true,
            "inherits": "target-linux"
        },
        {
            "name": "target-windows",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Windows",
                "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "NEVER",
                "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "ONLY",
                "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY"
            }
        },
        {
            "name": "target-windows-arm64",
            "hidden": true,
            "inherits": [
                "target-windows",
                "mingw-arm64-linux"
            ]
        },
        {
            "name": "target-windows-x86_64",
            "hidden": true,
            "inherits": [
                "target-windows",
                "mingw-x86_64-linux"
            ]
        },
        {
            "name": "ninja",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_COLOR_DIAGNOSTICS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "ninja-multi-config",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_COLOR_DIAGNOSTICS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "std-23",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_STANDARD": "23",
                "CMAKE_C_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON"
            }
        },
        {
            "name": "std",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_STANDARD_REQUIRED": true,
                "CMAKE_CXX_STANDARD_REQUIRED": true
            }
        },
        {
            "name": "no-std",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_STANDARD_REQUIRED": false,
                "CMAKE_CXX_STANDARD_REQUIRED": false
            }
        },
        {
            "name": "ccache",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cmakeExecutable": "cmake",
            "inherits": [
                "ninja",
                "clang",
                "std",
                "std-23",
                "ccache"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "testPresets": [
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "options",
            "hidden": true,
            "configuration": "Debug",
            "output": {
                "verbosity": "verbose"
            }
        }
    ]
}