{
    "version": 4,
    "include": [
        "Compilers.json",
        "CompilersConfig.json"
    ],
    "configurePresets": [
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "target-linux",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Linux"
            }
        },
        {
            "name": "target-linux-x64",
            "hidden": true,
            "inherits": "target-linux"
        },
        {
            "name": "target-linux-x86",
            "hidden": true,
            "inherits": "target-linux"
        },
        {
            "name": "target-linux-arm64",
            "hidden": true,
            "inherits": "target-linux"
        },
        {
            "name": "target-linux-arm",
            "hidden": true,
            "inherits": "target-linux"
        },
        {
            "name": "target-windows",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Windows"
            }
        },
        {
            "name": "target-windows-x64",
            "hidden": true,
            "inherits": [
                "target-windows"
            ]
        },
        {
            "name": "target-windows-x86",
            "hidden": true,
            "inherits": [
                "target-windows"
            ]
        },
        {
            "name": "target-windows-arm64",
            "hidden": true,
            "inherits": [
                "target-windows"
            ]
        },
        {
            "name": "target-windows-arm",
            "hidden": true,
            "inherits": [
                "target-windows"
            ]
        },
        {
            "name": "ninja",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_COLOR_DIAGNOSTICS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "ninja-multi-config",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_COLOR_DIAGNOSTICS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cmakeExecutable": "cmake",
            "inherits": [
                "ninja",
                "std",
                "std-23",
                "ccache"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "testPresets": [
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "options",
            "hidden": true,
            "configuration": "Debug",
            "output": {
                "verbosity": "verbose"
            }
        }
    ]
}