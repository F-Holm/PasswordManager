{
    "version": 8,
    "include": [
        "CompilersConfig.json",
        "Compilers.json"
    ],
    "configurePresets": [
        {
            "name": "ninja",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_COLOR_DIAGNOSTICS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "ninja-multi-config",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_COLOR_DIAGNOSTICS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cmakeExecutable": "cmake",
            "inherits": [
                "ninja",
                "std",
                "std-23",
                "ccache",
                "clang"
            ]
        },
        {
            "name": "release",
            "inherits": [
                "default",
                "release_conf"
            ]
        },
        {
            "name": "debug",
            "inherits": [
                "default",
                "debug_conf"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "build-release",
            "configurePreset": "release"
        },
        {
            "name": "build-debug",
            "configurePreset": "debug"
        }
    ],
    "testPresets": [
        {
            "name": "options",
            "hidden": true,
            "configuration": "Debug"
        },
        {
            "name": "test-release",
            "configurePreset": "release",
            "inherits": [
                "options"
            ]
        },
        {
            "name": "test-debug",
            "configurePreset": "debug",
            "inherits": [
                "options"
            ]
        }
    ]
}